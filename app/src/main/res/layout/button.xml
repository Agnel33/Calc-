<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="C"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#050505"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/clear_btn"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="%"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#050505"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/persentage_btn"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="^"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#090909"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/power_btn"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="/"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#0C0C0C"
            android:layout_row="0"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/division_btn"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="+"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#0C0C0C"
            android:layout_row="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/adition_btn"
            >
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="9"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#040404"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/nine_btn"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="8"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#020202"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/eight_btn"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="7"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#070707"
            android:layout_row="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/seven_btn"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="-"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#0C0C0C"
            android:layout_row="2"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/subraction_btn"
            >
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="6"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#070707"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/six_btn"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="5"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#070707"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/five_btn"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="4"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#0C0C0C"
            android:layout_row="2"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/fuor_btn"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="3"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#0C0C0C"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/three_btn"
            >
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="2"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#0C0C0C"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/two_btn"
            >
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="1"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#0C0C0C"
            android:layout_row="3"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/one_btn"
            >
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="*"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#0C0C0C"
            android:layout_row="3"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/multiplication_btn"
            >
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="0"
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#0C0C0C"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/zero_btn"
            >
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="."
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#0C0C0C"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/dort_btn"
            >
        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="="
            android:textSize="23dp"
            android:textColor="@color/white"
            android:background="#5E3232"
            android:layout_row="4"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:onClick="onButtonClick"
            android:id="@+id/equl_btn"
            android:layout_columnSpan="2"
            >
        </Button>


    </GridLayout>
</RelativeLayout>